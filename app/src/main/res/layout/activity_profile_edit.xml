<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.fragment.Profile.ProfileEditActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/profile_edit_ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/profile_edit_back"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/back_img"
            android:background="@color/colorFree"
            android:scaleType="fitStart"
            android:layout_weight="1"
            android:onClick="customOnClick"/>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="프로필 편집"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_weight="4"/>
        <Button
            android:id="@+id/profile_edit_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorFree"
            android:text="저장"
            android:textStyle="bold"
            android:textColor="@color/colorSplash"
            android:onClick="customOnClick"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/profile_edit_ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_edit_ll_top_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profile_edit_rl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/profile_edit_btn_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/profile_common"
                    android:background="@color/colorFree"
                    android:onClick="customOnClick"
                    android:scaleType="fitCenter"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_input_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_edit_btn_img"
                    android:layout_alignTop="@id/profile_edit_btn_img"
                    android:layout_above="@+id/profile_edit_input_last_name"
                    android:textColorHint="@color/colorGray"
                    >
                    <EditText
                        android:id="@+id/profile_edit_et_first_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="이름"
                        android:textColorHint="@color/colorGray"
                        android:textColor="@color/colorBlack"
                        android:backgroundTint="@color/colorGray"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_input_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_edit_btn_img"
                    android:layout_alignBottom="@+id/profile_edit_btn_img"
                    android:textColorHint="@color/colorGray">
                    <EditText
                        android:id="@+id/profile_edit_et_last_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="성"
                        android:textColorHint="@color/colorGray"
                        android:textColor="@color/colorBlack"
                        android:maxLength="10"
                        android:backgroundTint="@color/colorGray"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/profile_edit_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/profile_edit_rb_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:text="남성"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:button="@drawable/radio_button_man"
                        android:layout_marginRight="45dp"/>
                    <RadioButton
                        android:id="@+id/profile_edit_rb_girl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:textSize="20dp"
                        android:text="여성"
                        android:textColor="@color/colorBlack"
                        android:button="@drawable/radio_button_girl"/>
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorGray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray"
                    android:layout_marginBottom="15dp">
                    <EditText
                        android:id="@+id/profile_edit_et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="이메일"
                        android:textColorHint="@color/colorGray"
                        android:textColor="@color/colorBlack"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="@color/colorGray"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_input_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray"
                    android:layout_marginBottom="15dp">
                    <EditText
                        android:id="@+id/profile_edit_et_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="생일"
                        android:textColorHint="@color/colorGray"
                        android:textColor="@color/colorBlack"
                        android:backgroundTint="@color/colorGray"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_input_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray"
                    android:layout_marginBottom="15dp">
                    <EditText
                        android:id="@+id/profile_edit_et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="체중"
                        android:textColorHint="@color/colorGray"
                        android:textColor="@color/colorBlack"
                        android:inputType="numberDecimal"
                        android:backgroundTint="@color/colorGray"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_input_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGray"
                    android:layout_marginBottom="15dp">
                    <EditText
                        android:id="@+id/profile_edit_et_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="신장"
                        android:textColorHint="@color/colorGray"
                        android:textColor="@color/colorBlack"
                        android:inputType="numberDecimal"
                        android:backgroundTint="@color/colorGray"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>





</RelativeLayout>