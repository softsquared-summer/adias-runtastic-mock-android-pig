<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/custom_ripple_effect">

    <ImageView
        android:id="@+id/status_recent_item_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/status_running" />

    <TextView
        android:id="@+id/status_recent_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/status_recent_item_sub"
        app:layout_constraintStart_toEndOf="@+id/status_recent_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status_recent_item_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textSize="10dp"
        android:textColor="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/status_recent_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/status_recent_item_title" />

    <ImageView
        android:id="@+id/status_recent_item_weather"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/status_weather" />
</androidx.constraintlayout.widget.ConstraintLayout>