<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:gravity="center"
        android:id="@+id/plan_tv_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="플랜"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"/>

    <ScrollView
        android:layout_below="@id/plan_tv_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_1"
                android:adjustViewBounds="true"
                android:layout_marginBottom="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_2"
                android:adjustViewBounds="true"
                android:layout_marginBottom="1px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_3"
                android:adjustViewBounds="true"
                android:layout_marginBottom="1px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_4"
                android:adjustViewBounds="true"
                android:layout_marginBottom="1px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_5"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>