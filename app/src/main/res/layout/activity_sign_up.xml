<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.login.SignUpActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/sign_up_ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/back_img"
            android:background="@color/colorFree"
            android:scaleType="fitStart"
            android:layout_weight="1"/>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_weight="4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorFree"
            android:text="참여하기"
            android:textStyle="bold"
            android:textColor="@color/colorSplash"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/sign_up_ll_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>

    <RelativeLayout
        android:id="@+id/sign_up_rl_profile_name"
        android:layout_below="@+id/sign_up_ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/sign_up_btn_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/camera"
            android:background="@color/colorFree"
            android:scaleType="fitCenter"/>
        <EditText
            android:id="@+id/sign_up_et_name"
            android:layout_toRightOf="@+id/sign_up_btn_profile_img"
            android:layout_above="@+id/sign_up_et_last_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorBlack"
            android:maxLength="10"
            android:backgroundTint="@color/colorGray"/>
        <EditText
            android:id="@+id/sign_up_et_last_name"
            android:layout_toRightOf="@+id/sign_up_btn_profile_img"
            android:layout_alignBottom="@+id/sign_up_btn_profile_img"
            android:layout_marginBottom="7dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="성"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorBlack"
            android:maxLength="10"
            android:backgroundTint="@color/colorGray"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sign_up_ll_gender"
        android:layout_below="@+id/sign_up_rl_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="남성"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:button="@drawable/radio_button_man"
                android:layout_marginRight="45dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:textSize="20dp"
                android:text="여성"
                android:textColor="@color/colorBlack"
                android:button="@drawable/radio_button_girl"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_below="@+id/sign_up_ll_gender"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_ll_gender"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorBlack"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/colorGray"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorBlack"
            android:inputType="textPassword"
            android:backgroundTint="@color/colorGray"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>




</RelativeLayout>