<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.login.SignUpNextActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/sign_up_next_ll_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textColor="@color/colorSplash"
            android:textSize="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textColor="@color/colorBlack"
            android:textSize="35dp"
            />
    </LinearLayout>
    <View
        android:layout_below="@id/sign_up_next_ll_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>

    <LinearLayout
        android:layout_below="@id/sign_up_next_ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/join_custom_background"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cal_kcal"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cal_explain"
            android:textColor="@color/colorGray"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ruler"/>
            <EditText
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="신장"
                android:textColorHint="@color/colorGray"
                android:textColor="@color/colorBlack"
                android:maxLength="10"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/colorGray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bottle"/>
            <EditText
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="체중"
                android:textColorHint="@color/colorGray"
                android:textColor="@color/colorBlack"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:backgroundTint="@color/colorGray"/>
        </LinearLayout>
        <Button
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/join_custom_background"
            android:text="계속"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>


</RelativeLayout>