<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    style="?attr/borderlessButtonStyle">

    <ImageView
        android:id="@+id/profile_list_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_friends" />

    <TextView
        android:id="@+id/profile_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/profile_friend"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/profile_list_item_icon"
        app:layout_constraintTop_toTopOf="@+id/profile_list_item_icon" />

    <TextView
        android:id="@+id/profile_list_item_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/profile_friend_ex"
        android:textColor="@color/colorGray"
        app:layout_constraintStart_toEndOf="@+id/profile_list_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/profile_list_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>