<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorControlActivated">@color/colorDanger</item>
    </style>

    <!-- 힌트 색 -->
    <style name="TextInputLayoutAppearance"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorGray</item>
    </style>


    <!-- 바텀 네비게이션바 글씨 크기 조정 -->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- 커스텀 라디오버튼 버튼없애기 -->
    <style name="null_radio_button">
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="null_radio_button_none_image">
        <item name="android:button">@null</item>
    </style>

    <!-- 달력 테마 -->
    <style name="DateDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorWhiteGray</item>
        <item name="colorControlActivated">@color/colorSplash</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

</resources>
